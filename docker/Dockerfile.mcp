# Cricket-Insight Agent - MongoDB MCP Server Dockerfile
FROM python:3.11-slim

# Set metadata
LABEL maintainer="Cricket Analytics Team <team@cricket-insights.ai>"
LABEL description="MongoDB MCP Server for Cricket-Insight Agent"
LABEL version="1.0.0"

# Set environment variables
ENV PYTHONUNBUFFERED=1
ENV PYTHONDONTWRITEBYTECODE=1
ENV PIP_NO_CACHE_DIR=1
ENV PIP_DISABLE_PIP_VERSION_CHECK=1

# Install system dependencies
RUN apt-get update && apt-get install -y \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Create non-root user
RUN groupadd -r cricket && useradd -r -g cricket cricket

# Set working directory
WORKDIR /app

# Copy requirements and install Python dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy application code
COPY mcp_server/ ./mcp_server/
COPY schema/ ./schema/
COPY .env.example ./

# Create directories for data and logs
RUN mkdir -p /app/data /app/logs && \
    chown -R cricket:cricket /app

# Switch to non-root user
USER cricket

# Expose MCP server port
EXPOSE 8000

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=60s --retries=3 \
    CMD curl -f http://localhost:8000/health || exit 1

# Set default environment variables for MCP server
ENV MCP_SERVER_PORT=8000
ENV MCP_SERVER_HOST=0.0.0.0
ENV READ_ONLY=true
ENV MAX_TIME_MS=3000
ENV ALLOW_DISK_USE=false
ENV VERBOSE_LOGGING=false

# Command to run MCP server
CMD ["python", "-m", "mcp_server.server"]