# Cricket-Insight Agent Environment Configuration
# Copy this file to .env and update with your actual values

# =============================================================================
# LLM Configuration
# =============================================================================
# OpenAI API key for GPT-4o-mini model
OPENAI_API_KEY=sk-proj
# OpenAI model to use for cricket analysis (should be gpt-4o-mini)
LLM_MODEL=llama3.1

# Temperature for LLM responses (0.1 for consistent cricket analysis)
LLM_TEMPERATURE=0.1

# =============================================================================
# MongoDB MCP Server Configuration
# =============================================================================
# URI for the MongoDB MCP server
MCP_URI=mongodb://localhost:27017/?cricclubs-29-apr-2025


# MongoDB connection string with authentication
# Format: mongodb://username:password@host:port/database?authSource=admin
MONGODB_URI=mongodb://cricket_user:password@localhost:27017/cricket_db?authSource=admin

# Database name for cricket data
MONGODB_DATABASE=cricclubs-18-apr-2025

# =============================================================================
# Security Configuration (CRITICAL - DO NOT CHANGE)
# =============================================================================
# Enforce read-only mode for MongoDB operations
READ_ONLY=true

# Maximum execution time for MongoDB queries (milliseconds)
MAX_TIME_MS=3000

# Disable disk usage for aggregation operations (security)
ALLOW_DISK_USE=false

# Maximum number of documents to return per query
MAX_DOCUMENTS=1000

# =============================================================================
# MCP Server Configuration
# =============================================================================
# Port for MCP server to listen on
MCP_SERVER_PORT=8000

# Host for MCP server
MCP_SERVER_HOST=localhost

# Connection pool size for MongoDB
MONGODB_POOL_SIZE=10

# Connection timeout in milliseconds
MONGODB_TIMEOUT_MS=5000

# =============================================================================
# Application Configuration
# =============================================================================
# Enable verbose logging for debugging
VERBOSE_LOGGING=true

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Path to schema files
SCHEMA_PATH=./schema/

# Path to analytics helper modules
ANALYTICS_PATH=./analytics/

# =============================================================================
# Vector Store Configuration (Optional)
# =============================================================================
# Enable Chroma vector store for intelligent tool selection
ENABLE_VECTOR_STORE=false

# Directory for Chroma vector store persistence
CHROMA_PERSIST_DIR=./vector_store/data

# OpenAI embeddings model for vector store
EMBEDDINGS_MODEL=text-embedding-3-small

# Number of similar tools to retrieve
VECTOR_STORE_K=3

# =============================================================================
# Streamlit Configuration
# =============================================================================
# Port for Streamlit web UI
STREAMLIT_PORT=8501

# Streamlit server host
STREAMLIT_HOST=localhost

# Enable Streamlit development mode
STREAMLIT_DEBUG=true

# =============================================================================
# Docker Configuration
# =============================================================================
# Environment for Docker containers (development, staging, production)
ENVIRONMENT=development

# Health check interval for containers (seconds)
HEALTH_CHECK_INTERVAL=30

# =============================================================================
# Authentication & Security (Production)
# =============================================================================
# JWT secret for API authentication (generate with: openssl rand -hex 32)
# JWT_SECRET=your-jwt-secret-here

# API rate limiting (requests per minute)
# RATE_LIMIT=100

# CORS allowed origins for web UI
# CORS_ORIGINS=http://localhost:3000,http://localhost:8501

# =============================================================================
# Monitoring & Analytics (Production)
# =============================================================================
# Enable performance monitoring
# ENABLE_MONITORING=false

# Prometheus metrics endpoint
# METRICS_PORT=9090

# Application name for monitoring
# APP_NAME=cricket-insight-agent

# =============================================================================
# Cache Configuration (Optional)
# =============================================================================
# Enable Redis caching for query results
# ENABLE_CACHE=false

# Redis connection string
# REDIS_URI=redis://localhost:6379/0

# Cache TTL in seconds (default: 1 hour)
# CACHE_TTL=3600